@page "/7Boom"
<h3>7Boom</h3>
<ul>
@for (int i = 0; i <= 100; i++)
{
        <span>
            @if (i == 7 || i % 10 == 7 || i % 100 == 7 || i % 7 == 0 || i / 10 == 7)
            {
                <span>
                    Boom
                </span>
            }
            else
            @i
        </span>
}
</ul>