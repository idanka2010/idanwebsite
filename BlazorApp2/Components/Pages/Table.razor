@page "/Table"

<h3>Table</h3>
<head>
    <link href="css/app.css" rel="stylesheet" />
</head>

<table class="multiplication-table">
    <thead>
        <tr>
            <th class="table-header"></th> <!-- Empty corner cell -->
            @for (int col = 1; col <= 10; col++)
            {
                <th class="table-header">@col</th>
            }
        </tr>
    </thead>
    <tbody>
        @for (int row = 1; row <= 10; row++)
        {
            <tr class="table-row">
                <th class="table-row-header">@row</th> <!-- Row header -->
                @for (int col = 1; col <= 10; col++)
                {
                    <td class="table-cell">@(row * col)</td>
                }
            </tr>
        }
    </tbody>
</table>
